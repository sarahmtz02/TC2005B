<%- include('includes/head.ejs') %>
    <h1>Bienvenido a este sitio de Panques chidos</h1>
    <main>
        <h2>Aquí se habla de Panques</h2>
        <p>Estos son nuestros Panques:</p>
        <div class="row">
        <% if (panques.length > 0) { %>
                <% for (let panque of panques) { %>
                    <div class="col s12 m4 l3">
                        <div class="card small">
                            <div class="card-image waves-effect waves-block waves-light">
                            <img class="activator" src="./includes/media/GFA.jpeg">
                            </div>
                            <div class="card-content">
                            <span class="card-title activator grey-text text-darken-4"><%= panque.nombre %><i class="material-icons right">more_vert</i></span>
                            <p><a href="#">This is a link</a></p>
                            </div>
                            <div class="card-reveal green lighten-1">
                            <span class="card-title grey-text text-darken-4"><%= panque.nombre %><i class="material-icons right">close</i></span>
                            <p>Aquí se puede ver más información del producto.</p>
                            </div>
                        </div>
                    </div>
                <% } %>
        <% } else { %>
            <h3>No tenemos Panques</h3>
        <% } %>   
        </div>
        <a href="/panques/nuevo">
            <i class="material-icons">add</i> Agregar un nuevo Panque</a>
    </main>
<%- include('includes/footer.ejs') %>